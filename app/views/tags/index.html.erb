<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class: 'tag_title' %>
      <% if logged_in? %>
        <%= link_to "delete", tag, data: {confirm: "Really delete the article?"}, method: :delete %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "<< Back to Articles List", articles_path %>
